<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.knockongoal">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <!--  общая телефония -->
                <category android:name="android.hardware.telephony"/>

                <!--  CDMA-телефония -->
                <category android:name="android.hardware.telephony.cdma"/>

                <!--  GSM-телефония -->
                <category android:name="android.hardware.telephony.gsm"/>
                <category android:name="android.permission.CALL_PHONE" />
                <category android:name="android.permission.CALL_PRIVILEGED"/>

            </intent-filter>
        </activity>
        <receiver android:name=".Widget">
            <intent-filter>
                <action android:name="android.appWidget.action.APPWIDGET_UPDATE"></action>
            </intent-filter>
            <meta-data android:name="android.appwidget.AppWidgetProvider" android:resource="@xml/widget"/>
        </receiver>

    </application>

</manifest>